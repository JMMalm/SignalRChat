@page
@model IndexModel
@{
	ViewData["Title"] = "Home";
}

<div class="container">
	<div class="row">
		<div class="col-6 form-group">
			<label class="col-form-label">User name:</label>
			<input type="text" id="userInput" class="form-control" />

			<label class="col-form-label">Message:</label>
			<input type="text" id="messageInput" class="form-control" />

			<input type="button" id="sendButton" value="Send Message" class="form-control" />
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			<hr />
			<ul id="messagesList"></ul>
		</div>
	</div>
</div>

@* https://getbootstrap.com/docs/4.2/components/toasts/ *@
<div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="5000">
	<div class="toast-header">
		<strong class="mr-auto">SignalR Chat</strong>
		<small>@DateTime.Now.ToShortTimeString()</small>
		<button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
	<div class="toast-body">
		You are connected!
	</div>
</div>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>